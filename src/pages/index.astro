// Funci贸n para obtener los metadatos de la imagen desde Cloudinary
async function getImageDimensions(imageUrl: string) {
    const apiUrl = `https://res.cloudinary.com/<tu-cloud-name>/image/upload/c_fetch/${imageUrl}`
    const response = await fetch(apiUrl)
    const data = await response.json()
    return { width: data.width, height: data.height }
};

// Llama a la funci贸n para obtener el ancho y alto de la imagen
