---
import type { CollectionEntry } from 'astro:content'
// import Icon from '@components/ui/icons/icon.astro'
import Image from '@components/ui/images/Image.astro'

const { blog } = Astro.props

interface Props {
    blog: CollectionEntry<'posts'>
}
---

<a
    class='transition duration-300 outline-none group rounded-xl ring-zinc-500 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none'
    href={`/posts/${blog.slug}/`}
    data-astro-prefetch
>
    <div class='relative overflow-hidden aspect-w-16 aspect-h-10 rounded-xl'>
        <Image
            class='w-full h-full sm:h-[220px] md:h-[240px] object-cover rounded-xl transition duration-500 ease-in-out group-hover:scale-105'
            src={blog.data.banner}
            alt={blog.data.title}
            format='avif'
            loading='lazy'
            width='850'
            height='440'
        />
    </div>

    <div class='mt-7'>
        <h3
            class='text-xl font-bold text-neutral-800 group-hover:text-neutral-600 dark:text-neutral-200 dark:group-hover:text-neutral-400'
        >
            {blog.data.title}
        </h3>

        <p class='mt-3 text-neutral-600 dark:text-neutral-400'>
            {blog.data.description}
        </p>

        <p
            class='inline-flex items-center mt-5 font-medium text-orange-400 gap-x-1 decoration-2 group-hover:underline dark:text-orange-300'
        >
            Leer m√°s
        </p>
    </div>
</a>
