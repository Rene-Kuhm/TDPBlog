{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/src/content/posts",
      "contentTypes": [
        "posts"
      ]
    },
    {
      "title": "categorias",
      "path": "[[workspace]]/src/content/categorias",
      "contentTypes": [
        "categorias"
      ]
    },
    {
      "path": "[[workspace]]/src/images",
      "title": "images"
    },
    {
      "path": "[[workspace]]/src/images/banners",
      "title": "banners"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "posts",
      "previewPath": "posts",
      "pageBundle": false,
      "clearEmpty": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Category",
          "name": "category",
          "type": "string"
        },
        {
          "title": "Banner Image",
          "name": "banner",
          "type": "string"
        },
        {
          "title": "Secondary Banner",
          "name": "banner2",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "list"
        },
        {
          "title": "Selected",
          "name": "selected",
          "type": "boolean",
          "default": false
        }
      ]
    },
    {
      "name": "categorias",
      "previewPath": "categorias",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": []
    }
  ],
  "frontMatter.git.enabled": true
}
